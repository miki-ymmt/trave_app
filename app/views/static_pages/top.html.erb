    </div>
  </div>
</div>

<div class="flex flex-col justify-center items-center py-6">
  <div class="card glass w-2/3">
    <div class="card-body justify-center items-center">
      <%= link_to "#", class: "inline-block p-2 bg-blue-topaz text-center text-white rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300 w-auto mx-auto pointer-events-none" do %>
