<div class="flex flex-col justify-center items-center min-h-screen">
  <h1 class="text-2xl sm:text-3xl font-bold mb-10 mt-20 flex justify-center"><%= current_user.name %>さんの旅一覧</h1>
  <div class="flex flex-wrap justify-center">
    <!-- 旅行の一覧を表示 -->
    <% if @trips.any? %>
      <% @trips.each do |trip| %>
        <div class="w-full p-4 max-w-md mx-auto">
          <div class="card bg-blue-50 shadow-xl rounded-lg overflow-hidden max-w-xl mx-auto h-auto sm:h-64 relative card-background card transform origin-bottom transition-transform duration-300 hover:scale-105">
            <div class="card-body flex-grow p-6 text-sm sm:text-lg text-zinc-700 text-opacity-80 leading-relaxed">
              <h2 class="card-title font-bold text-shadow-md">【<%= trip.destination %>への旅】</h2>
              <p class="text-gray-700 text-sm sm:text-lg sm:text-base text-zinc-700 text-opacity-80 leading-relaxed text-shadow-md"><%= trip.departure_date %>〜<%= trip.return_date %></p>
              <div class="card-actions mt-4 justify-end items-end">
                <%= link_to "詳細 ▷", trip_path(trip), class: "btn btn-active btn-link px-6 py-3 mt-6 text-base flex items-center space-x-2 text-zinc-700 hover:text-zinc-900 text-opacity-80" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center mt-6">まだ旅行の予定がありません。</p>
    <% end %>
  </div>
</div>
