<%= form_with(model: [ @trip, todo ], url: add_todo_trip_path(@trip), data: { turbo_frame: "todo-form" }) do |f| %>
  <div class="flex items-end space-x-2">
    <div class="flex-grow">
      <div class="form-group mt-6">
        <%= f.text_field :content, placeholder: "TO DOの追加", class: "input input-bordered w-full rounded-none" %>
      </div>
    </div>
    <div>
      <div class="form-group">
          <%= f.submit "追加", class: "btn btn bg-purple-300 hover:bg-purple-500 btn btn primary px-6 py-3 hover:shadow-sm hover:translate-y-0.5 transform transition rounded shadow-lg" %>
      </div>
    </div>
  </div>
<% end %>