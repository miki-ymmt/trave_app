
<div class="flex flex-col justify-center items-center min-h-screen">
  <div class="w-full max-w-md">
    <h1 class="text-3xl font-bold mb-4 mt-6 text-center">パスワードリセット申請</h1>
    <%= form_with model: @user, url: password_resets_path, local: true do |form| %>
        <div class="mb-8 w-3/5 sm:w-4/5 md:w-full mx-auto">
          <%= form.email_field :email, placeholder: "メールアドレスを入力", class: "mt-12 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md h-12 p-2 placeholder:メールアドレスを入力" %>
        </div>
        <div class="mb-8 flex justify-center w-3/5 sm:w-4/5 md:w-full mx-auto">
          <%= form.submit "送信", class: "btn btn-secondary rounded mt-8 shadow-lg w-full" %>
        </div>
    <% end %>
  <div>
</div>
