<div class="container">
  <div class="row">
    <div class="flex flex-col justify-center items-center min-h-screen">
      <h1 class="text-3xl font-bold mb-6">ログイン</h1>
      <%= form_with url: login_path, local: true do |form| %>
        <div class="mb-8">
          <%= form.email_field :email, placeholder: "メールアドレスを入力", class: "mt-1 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md h-12 p-2 placeholder:メールアドレスを入力" %>
        </div>
        <div class="mb-8 w-80">
          <%= form.password_field :password, placeholder: "パスワードを入力", class: "mt-1  focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md h-12 p-2" %>
        </div>
        <div class="mb-8 flex justify-center w-80">
          <%= form.submit "ログイン", class: "btn btn-secondary rounded mt-8 shadow-lg w-full" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
